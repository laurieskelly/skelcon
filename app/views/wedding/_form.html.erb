                <div class="row">
                  <div class="col-md-3">
                    <h3>RSVP</h3>
                  </div>
    
                <div class="col-md-9">
                  <form>
                    <div class="form-group input-group input-group-lg">
                      <span class="input-group-addon" id="name-input-addon">M</span>
                      <%# f.text_field :names, :required => true, :placeholder => "s. Wedding Attendee & Mr. Hot Date" %>
                    </div>

                    <div class="form-group input-group input-group-lg">
                      <span class="input-group-addon" id="contact-email-addon">Contact email address</span>
                      <input type="text" class="form-control" placeholder="ry@sodadrinkerpro.org">
                    </div>

                    <div class="form-group btn-group btn-group-justified btn-group-lg" role="group">
                      <div class="btn-group btn-group-lg" role="group">
                      <button type="button" class="btn btn-default">Accepts</button>
                      </div>
                      <div class="btn-group btn-group-lg" role="group">
                      <button type="button" class="btn btn-default">Regrets</button>
                      </div>
                    </div>

                    <div class="row">
                      <div class="col-md-8">
                        <div class="form-group input-group input-group-lg">
                          <span class="input-group-addon" id="num-attending-addon"># attending</span>
                          <input type="text" class="form-control" placeholder="1">
                        </div>
                      </div>
                      <div class="col-md-4">
                        <div class="form-group input-group input-group-lg">
                          <div class="btn-group btn-group-justified" role="group">
                            <div class="btn-group" role="group">
                              <button type="submit" class="btn btn-default btn-lg"><b>Submit</b></button>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>

                  </form>
                </div>
