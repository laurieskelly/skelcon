                <div class="row">
                  <div class="col-md-3">
                    <h3>RSVP</h3>
                  </div>
    
                <div class="col-md-9">
                  <%= form_for @rsvp, url: create_rsvp_path do |f| %>
                    <div class="form-group input-group input-group-lg">
                      <span class="input-group-addon" id="name-input-addon">M</span>
                      <%= f.text_field :names, class: "form-control", placeholder: "s. Wedding Attendee & Mr. Hot Date" %>
                    </div>

                    <div class="form-group input-group input-group-lg">
                      <span class="input-group-addon" id="contact-email-addon">Contact email address</span>
                      <%= f.text_field :email, class: "form-control", placeholder: "ry@sodadrinkerpro.org" %>
                    </div>

                    <div class="form-group btn-group btn-group-justified btn-group-lg" data-toggle="buttons" role="group">
                      
                      <label for="accepts_button" class="btn btn-default">
                      <%= f.radio_button :response, "accepts", id: "accepts_button", style: "display:none" %>
                      Accepts</label>
                      
                      <label for="regrets_button" class="btn btn-default">
                      <%= f.radio_button :response, "regrets", :id=>"regrets_button", :style=>"display:none" %>
                      Regrets</label>

                    </div>

                    <div class="row">
                      <div class="col-md-8">
                        <div class="form-group input-group input-group-lg">
                          <span class="input-group-addon" id="num-attending-addon"># attending</span>
                          <%= f.text_field :how_many, class: "form-control", placeholder: "1" %>
                        </div>
                      </div>
                      <div class="col-md-4">
                        <div class="form-group input-group input-group-lg">
                          <div class="btn-group btn-group-justified" role="group">
                            <div class="btn-group" role="group">
                              <%= f.submit "Submit RSVP", class: "btn btn-primary btn-lg" %>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>

                  <% end %> 
                </div>
